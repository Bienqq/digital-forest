<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vue.cordova.cyfrowy.las" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cyfrowy Las</name>
    <description>
        A mobile application to manage the responsibilities of a forester
    </description>
    <author email="tomek-1996-1996@o2.pl">
        Tomasz Bieniek
    </author>
    <content src="http://192.168.0.73:8081" />
    <allow-navigation href="http://192.168.1.103:8080" />
    <content src="index.html" />
    <allow-navigation href="http://192.168.0.164:8081" />
    <allow-navigation href="http://192.168.1.106:8080" />
    <allow-navigation href="http://192.168.1.103:8080" />
    <allow-navigation href="http://192.168.1.106:8081" />
    <allow-navigation href="http://192.168.0.73:8083" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="20" />
        <preference name="SplashScreenSpinnerColor" value="white" />
        <preference name="fullscreen" value="false" />
        <preference name="loadUrlTimeoutValue" value="700000" />
        <splash density="port-hdpi" src="res/screen/android/hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/xhdpi.png" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application/activity">
            <activity android:windowSoftInputMode="adjustResize" />
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-background-mode" spec="~0.7.2" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="2.1.3" />
    <plugin name="cordova-plugin-facebook4" spec="4.2.1">
        <variable name="APP_ID" value="396137357845888" />
        <variable name="APP_NAME" value="Cyfrowy Las" />
        <variable name="FACEBOOK_HYBRID_APP_EVENTS" value="true" />
        <variable name="FACEBOOK_ANDROID_SDK_VERSION" value="4.40.0" />
    </plugin>
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.1" />
    <engine name="android" spec="^8.0.0" />
</widget>
