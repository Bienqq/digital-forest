<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vue.cordova.cyfrowy.las" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cyfrowy Las</name>
    <description>
        A mobile application to manage the responsibilities of a forester
    </description>
    <author email="tomek-1996-1996@o2.pl">
        Tomasz Bieniek
    </author>
    <content src="http://192.168.1.100:8080" />
    <allow-navigation href="http://192.168.1.100:8080" />
    <allow-navigation href="http://192.168.0.73:8082" />
    <allow-navigation href="http://192.168.0.164:8082" />
    <allow-navigation href="http://192.168.0.164:8082" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="orientation" value="portrait" />
        <preference name="SplashScreenSpinnerColor" value="white" />
        <splash density="port-hdpi" src="res/screen/android/hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
</widget>
